<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.jt.manage.mapper.ItemMapper">
    <select id="findItemByPage" resultType="com.jt.manage.pojo.Item">
        select * from tb_item order by updated desc limit #{start},#{rows}
    </select>

    <update id="updateItemStatusByIds">
        update tb_item set status=#{status}
        where id
        in(
        <foreach collection="ids" item="item" index="index" separator=",">
            #{item}
        </foreach>
        )
    </update>
</mapper>
